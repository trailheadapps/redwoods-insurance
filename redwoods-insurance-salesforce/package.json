{
    "name": "redwoods-insurance",
    "private": true,
    "version": "0.1.0",
    "description": "Redwoods Insurance Sample app",
    "scripts": {
        "lint": "npm run lint:lwc",
        "lint:lwc": "eslint **/lwc/**",
        "prettier": "prettier --write '**/*.{cmp,component,css,html,js,json,md,page,yaml,yml,cls,trigger}'",
        "prettier:verify": "prettier --list-different '**/*.{html,js,json,yaml,yml,md,cmp,page,component,cls,trigger}'",
        "postinstall": "node bin/check-version.js"
    },
    "author": "salesforce.com",
    "license": "CC0-1.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/trailheadapps/redwoods-insurance"
    },
    "engines": {
        "node": ">= 10.13.0",
        "npm": ">= 6.5.0"
    },
    "devDependencies": {
        "@salesforce/eslint-config-lwc": "^0.4.0",
        "@salesforce/lwc-jest": "^0.6.2",
        "eslint": "^5.15.1",
        "husky": "^4.0.9",
        "lint-staged": "^9.5.0",
        "prettier": "^1.19.1",
        "prettier-plugin-apex": "^1.0.0",
        "semver": "^7.1.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{html,js,json,yaml,yml,md,cmp,page,component,cls,trigger}": [
            "prettier --write"
        ],
        "**/lwc/**": [
            "eslint"
        ],
        "*": [
            "git add"
        ]
    }
}
